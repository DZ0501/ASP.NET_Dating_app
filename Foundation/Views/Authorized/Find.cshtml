@model IEnumerable<Foundation.Models.Person_model>



@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th class="col-sm-1">
                @Html.DisplayNameFor(model => model.Person_modelId)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="col-sm-2">
                Options
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Person_modelId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="DetailsUser" asp-route-id="@item.Person_modelId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


