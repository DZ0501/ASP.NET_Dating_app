@using Foundation.Models;
@model CreateRole_model
@{
    ViewData["Title"] = "Create New Role";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Create a new role.</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="RoleName" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="RoleName"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-dark">Create Role</button>
        </form>
        <a asp-action="Index">Go back!</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
